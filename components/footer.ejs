<script>
  // Initialize VanillaTilt for social icons
  VanillaTilt.init(document.querySelectorAll(".social-icon"), {
    max: 25,
    speed: 400,
    glare: true,
    "max-glare": 0.5,
  });

  // Back to top functionality
  document.getElementById('backToTop').addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });

  // Dark mode toggle functionality
  const darkModeToggle = document.getElementById('darkModeToggle');
  const sunIcon = darkModeToggle.querySelector('.fa-sun');
  const moonIcon = darkModeToggle.querySelector('.fa-moon');

  darkModeToggle.addEventListener('click', () => {
    document.body.classList.toggle('dark-mode');
    sunIcon.classList.toggle('hidden');
    moonIcon.classList.toggle('hidden');
  });

  // Live chat functionality (placeholder)
  document.querySelector('.live-chat-bubble').addEventListener('click', () => {
    console.log('Live chat clicked');
    // Implement your live chat functionality here
  });

  // Lazy load social icons
  document.addEventListener('DOMContentLoaded', (event) => {
    const socialIcons = document.querySelectorAll('.social-icon i');
    socialIcons.forEach(icon => {
      icon.classList.add('opacity-0');
      setTimeout(() => {
        icon.classList.remove('opacity-0');
        icon.classList.add('opacity-100', 'transition-opacity', 'duration-500');
      }, 100);
    });
  });

  // Easter egg: Trigger shooting star
  let starTriggerCount = 0;
  document.addEventListener('click', () => {
    starTriggerCount++;
    if (starTriggerCount === 5) {
      const shootingStar = document.querySelector('.shooting-star');
      shootingStar.classList.remove('hidden');
      shootingStar.style.left = '-10%';
      shootingStar.style.top = '10%';
      shootingStar.style.transform = 'rotate(-45deg)';
      shootingStar.style.transition = 'all 1s ease-out';
      setTimeout(() => {
        shootingStar.style.left = '110%';
        shootingStar.style.top = '90%';
      }, 100);
      setTimeout(() => {
        shootingStar.classList.add('hidden');
      }, 1100);
      starTriggerCount = 0;
    }
  });
</script>
